<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.4anime"
version="0.3.0"
name="4Anime.to"
provider-name="ostvanc">
<requires>
  <import addon="xbmc.python" version="2.25.0"/>
  <import addon="script.module.beautifulsoup4" version="4.5.3"/>
  <import addon="script.module.cloudscraper" version="1.2.23"/>
  <import addon="script.module.js2py" version="6.02.2"/>
  <import addon="script.module.pyperclip" version="1.7.0"/>
  <import addon="script.module.requests" version="2.22.0"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">4Anime Video Addon</summary>
  <description lang="en_GB">Kodi video plugin for the website 4Anime.to</description>
  <disclaimer lang="en_GB">https://4anime.to</disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources\screenshots\screenshot-01.jpg</screenshot>
	<screenshot>resources\screenshots\screenshot-02.jpg</screenshot>
	<screenshot>resources\screenshots\screenshot-03.jpg</screenshot>
  </assets>
  <news>
	0.0.1 - 01/12/2019 - Initial version - added random tv show
	0.0.2 - 03/12/2019 - added search tv show
	0.1.0 - 04/12/2019 - added Cloudfare protection
	0.2.0 - 08/03/2020 - added JS Evaluation
	0.3.0 - 18/03/2020 - added search by genre
  </news>
</extension>
</addon>
